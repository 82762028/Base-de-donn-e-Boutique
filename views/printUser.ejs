<center> 
 
 
 <div class="main-panel">        
     <div class="content-wrapper">
     

 
       <div class="row">
               <div class="col-12 grid-margin stretch-card">
                 <div class="card">
                   <div class="card-body">
                   
    

                      
                      
 <div style="border: 3px dashed rgb(4, 76, 163);" class="table-responsive">
                 
  <ul class="list-group">
  
  <table class="table table-striped table-sm">
    <thead>
       <tr>
          <th scope="col">Numero du Commande</th>
          <th scope="col">Date Commande</th>
          <th scope="col">Nom du Vendeur</th>
          <th scope="col">email du Vendeur</th>
          <th scope="col">Nom Boutique</th>
       </tr>
    </thead>
    <tbody>

         <tr class="align-middle">
             <td><%= element._id%></td>
             <td> <div class="col"><%= element.createdAt.toLocaleDateString("fr-FR", {
              year:"numeric",
              month:"long",
              day:"numeric"
             }) %></div> </td>
              <td><%= element.prenom %> <%= element.name %></td>
              <td><%= element.email %></td>
             <td><%= element.category %></td>
         </tr>
   
   
     </tbody>
   
    </table> 
 
  </ul>
  <hr>
 <table class="table table-striped table-sm">
 <thead>
    <tr>
       <th scope="col">produits</th>
       <th scope="col">Numero du produit</th>
       <th scope="col">prix</th>
       <th scope="col">Quantite</th> 
    </tr>
 </thead>
 <tbody>
  <% element.product.forEach(elements => { %>
      <tr class="align-middle">
          <td><%= elements.name %></td>
          <td><%= elements.idProduct %></td>
          <td><%= elements.prix %></td>
          <td><%= elements.qte %></td>
      </tr>
  <% })%>

  </tbody>

 </table> 
 <%  var total = 0;
 element.product.forEach(function(element) {
     total += element.qte * element.prix;
 }); %>
 <b>  Le prix Total: <%= total %> FCFA </b>

 </div>


      
    
                   </div>
                 </div>
               </div>
     
 
 
       </div>
     </div>
     </div>
 
 
    </center>  
   